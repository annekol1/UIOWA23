generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = process.env("DATABASE_URL")
}

model DataSample {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  taken       DateTime
  avgMoisture Float
  avgLight    Float
  Scanner     Scanner? @relation(fields: [scannerId], references: [id])
  scannerId   String?  @db.ObjectId
}

model Scanner {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  samples DataSample[]
}
